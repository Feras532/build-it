<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login and Signup</title>

</head>
<body>

    <div class="stage">
        <div class="middle">
            <div class="title">
                <img class="logo" src="../../assets/logoSeperated.png">
                <h1> Login to Your Account </h1>
                <p> The first step in getting the PC you deserve! </p>
            </div>

            <!-- Login Form -->
            <form method="POST" action="/login" id="authForm">
                <div id="usernameField" style="display: none;">
                    <label for="userName">Username:</label><br>
                    <input type="text" id="userName" name="userName" placeholder="Username" class="inputs"><br>
                </div>
                <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" placeholder="Email" class="inputs" required><br>
                <label for="password">Password:</label><br>
                <input type="password" id="password" name="password" placeholder="Password" class="inputs" required><br>
                <div id="confirmPasswordField" style="display: none;">
                    <label for="password2">Confirm Password:</label><br>
                    <input type="password" id="password2" name="password2" placeholder="Confirm Password" class="inputs"><br>
                </div>
                <button class="subBut" type="submit" id="submitBtn">Login</button>
            </form>

            <p class="signUp">
                <span id="formToggleText">Not registered yet? </span>
                <button id="formToggleButton" type="button">Create an account!</button>
            </p>
        </div>
    </div>

 <script>
        let newUser = false;

        document.getElementById('formToggleButton').addEventListener('click', function() {
            const usernameDiv = document.getElementById('usernameField');
            const confirmPasswordDiv = document.getElementById('confirmPasswordField');
            const form = document.getElementById('authForm');
            const submitBtn = document.getElementById('submitBtn');
            const toggleText = document.getElementById('formToggleText');
            

            if (!newUser) {
                form.action = '/register';
                usernameDiv.style.display = 'block';
                confirmPasswordDiv.style.display = 'block';
                submitBtn.textContent = 'Signup';
                toggleText.textContent = 'Already registered? ';
                formToggleButton.textContent = 'Login Instead'

                newUser = true;
            } else {
                form.action = '/login';
                usernameDiv.style.display = 'none';
                confirmPasswordDiv.style.display = 'none';
                submitBtn.textContent = 'Login';
                toggleText.textContent = 'Not registered yet? ';
                formToggleButton.textContent = 'Create an account!'

                newUser = false;
            }
        });
    </script>
</body>
</html>